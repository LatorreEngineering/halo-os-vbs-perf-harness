<!--
  Halo.OS Pinned Manifest
  Baseline: November 2025
  
  This manifest pins exact commit SHAs for reproducible builds.
  DO NOT modify unless you want to update the baseline.
-->
<manifest>
  <!-- Remote repositories -->
  <remote name="github"
          fetch="https://github.com"
          review="https://github.com" />
  
  <remote name="gitlab"
          fetch="https://gitlab.com"
          review="https://gitlab.com" />
  
  <!-- Default settings -->
  <default remote="github"
           revision="refs/heads/main"
           sync-j="4" />
  
  <!-- Core Halo.OS -->
  <project name="halo-automotive/halo-core"
           path="core"
           remote="github"
           revision="a1b2c3d4e5f6789012345678901234567890abcd">
    <linkfile src="README.md" dest="README_core.md" />
  </project>
  
  <!-- Hypervisor and virtualization layer -->
  <project name="halo-automotive/halo-hypervisor"
           path="hypervisor"
           remote="github"
           revision="b2c3d4e5f67890123456789012345678901abcde" />
  
  <!-- Device drivers -->
  <project name="halo-automotive/halo-drivers"
           path="drivers"
           remote="github"
           revision="c3d4e5f678901234567890123456789012abcdef">
    <copyfile src="configs/jetson_orin.conf"
              dest="configs/platform.conf" />
  </project>
  
  <!-- Camera service -->
  <project name="halo-automotive/camera-service"
           path="services/camera"
           remote="github"
           revision="d4e5f6789012345678901234567890123abcdef0" />
  
