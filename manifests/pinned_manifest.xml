<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Remote definitions -->
  <remote name="gitee" fetch="https://gitee.com/" />
  <remote name="github" fetch="https://github.com/" />

  <!-- Default revision -->
  <default revision="main" remote="gitee" sync-j="4" />

  <!-- Main performance harness repo -->
  <project
    name="LatorreEngineering/halo-os-vbs-perf-harness"
    path="halo-os-vbs-perf-harness"
    revision="main"
    remote="github" />

  <!-- Halo.OS components required for tests -->
  <project
    name="haloos/vbs"
    path="halo-vbs"
    revision="main"
    remote="gitee" />

  <project
    name="haloos/apps_rt_demo"
    path="apps_rt_demo"
    revision="main"
    remote="gitee" />

  <project
    name="haloos/vcos"
    path="halo-vcos"
    revision="main"
    remote="gitee" />

  <project
    name="haloos/vcos_components_rt_framework"
    path="vcos-components-rt-framework"
    revision="main"
    remote="gitee" />

  <!-- Optional supporting projects -->
  <project
    name="haloos/docs"
    path="haloos-docs"
    revision="main"
    remote="gitee" />

  <!-- Third-party dependencies -->
  <project
    name="lttng/lttng-ust"
    path="third_party/lttng-ust"
    revision="v2.13.6"
    remote="github" />

  <project
    name="protocolbuffers/protobuf"
    path="third_party/protobuf"
    revision="v25.1"
    remote="github" />

  <project
    name="gabime/spdlog"
    path="third_party/spdlog"
    revision="v1.12.0"
    remote="github" />
</manifest>
