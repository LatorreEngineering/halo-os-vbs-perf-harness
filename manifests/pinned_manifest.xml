  </project>
  
  <!-- Third-party dependencies -->
  <project name="lttng/lttng-ust"
           path="third_party/lttng-ust"
           remote="github"
           revision="v2.13.6" />
  
  <project name="protocolbuffers/protobuf"
           path="third_party/protobuf"
           remote="github"
           revision="v25.1" />
  
  <project name="gabime/spdlog"
           path="third_party/spdlog"
           remote="github"
           revision="v1.12.0" />
  
  <!-- Test data and scenarios -->
  <project name="halo-automotive/test-scenarios"
           path="test/scenarios"
