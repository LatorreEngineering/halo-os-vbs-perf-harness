           remote="github"
           revision="e5f67890123456789012345678901234abcdef01" />
  
  <!-- Vehicle control service -->
  <project name="halo-automotive/control-service"
           path="services/control"
           remote="github"
           revision="f678901234567890123456789012345abcdef012" />
  
  <!-- NPU virtualization layer -->
  <project name="halo-automotive/npu-virt"
           path="drivers/npu"
           remote="github"
           revision="6789012345678901234567890123456abcdef0123" />
  
  <!-- Common libraries -->
  <project name="halo-automotive/common-libs"
           path="libs/common"
           remote="github"
           revision="789012345678901234567890123456789abcdef01" />
  
  <!-- IPC library -->
  <project name="halo-automotive/ipc-lib"
           path="libs/ipc"
           remote="github"
           revision="89012345678901234567890123456789012abcdef" />
  
  <!-- Tracing infrastructure -->
  <project name="halo-automotive/trace-infra"
           path="tools/tracing"
           remote="github"
           revision="9012345678901234567890123456789012345abcd" />
  
